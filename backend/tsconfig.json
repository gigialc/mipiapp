{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./build",
    "rootDir": "./src",
    "strictNullChecks": true,  
    "esModuleInterop": true,
    "strict": true,            /* Enable strict null checks. */
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],/* Emit the source alongside the sourcemaps within a single file; requires '--inlineSourceMap' or '--sourceMap' to be set. */
    "noImplicitAny": true

  },
  "include": ["src/**/*"]
}

